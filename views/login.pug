extends layout

block content
    div.container
        if message.length
            h4.alert.alert-danger= message
        .row
            .col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Sign in to continue
                form.form-signin(method="post")
                        input.form-control(type='text', placeholder='Username', required='', autofocus='', name="username")
                        input.form-control(type='password', placeholder='Password', required='',name="password")
                        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
                        br
                        a.text-center.new-account.col-sm-12(href='/signup') Create an account