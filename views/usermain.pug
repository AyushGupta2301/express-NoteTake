extends layout

block content
  
  h1= titleMsg
  h3 Your Notes:
  ul.list-group
    each note in noteList
      li.list-group-item 
        a(href = "/notes/" + note.key)= note.title
  
  a.btn.btn-primary(href="/notes") + Add New Note
  h3 Import Notes (only .txt files supported):
  input(type="file" id="importFile")  
  button.btn.btn-primary(id="importBtn") Import

block pagescripts
  script(src = "/javascripts/import/import.js")